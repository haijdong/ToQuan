<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F1F1F1"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#323441">

        <ImageButton
            android:id="@+id/videocertification_returnbtn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_title_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/videocertification_returnbtn"
            android:gravity="center_vertical"
            android:text="申请认证"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="拍摄一段你个人的正面视频"
        android:textColor="#313131"
        android:textSize="18sp"/>

    <ImageButton
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="50dp"
        android:scaleType="center"
        android:src="@drawable/ic_video"
        android:id="@+id/radiobtn_register_man"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/shape_videocertification_dottedline"
        />

    <TextView
        android:textColor="#3D5AFE"
        android:textSize="15sp"
        android:gravity="center"
        android:text="录视频时请说:我在申请Ai的视频认证"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageButton
            android:src="@drawable/ic_picture"
            android:background="@drawable/shape_videocertification_dottedline"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:textColor="#979797"
            android:textSize="17sp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="上传第一张生活照片 \n(必须是正面的)"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageButton
            android:src="@drawable/ic_picture"
            android:background="@drawable/shape_videocertification_dottedline"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:textColor="#979797"
            android:textSize="17sp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="上传第二张生活照片 \n(如:逛街,吃饭等)"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/selector_register_submit"
        android:elevation="0dp"
        android:text="提交审核"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>
</LinearLayout>