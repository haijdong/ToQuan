<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whale.nangua.toquan.act.NestedScrollViewActivity">

    <RelativeLayout
        android:id="@+id/ll_weibo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/ivImage"
            android:layout_centerVertical="true"
            android:background="#ff0"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:scaleType="centerCrop"
           />



            <TextView
                android:id="@+id/tvTitle"
                android:padding="10dp"
                android:layout_toRightOf="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\@日系画册"
                android:textColor="#217dad"
                android:textSize="16sp" />



            <TextView
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/tvContent"
                android:layout_below="@+id/tvTitle"
                android:layout_toRightOf="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="眼泪的存在是一场幻觉当升眼眼泪的存在是一场幻觉当升眼泪的存在是一场幻觉当升眼泪的存在是一场幻觉当升眼泪的存在是一场幻觉当升眼泪的存在是一场幻觉当升眼泪的存在是一场幻觉当升泪的存在是一场幻觉当升眼泪的存在是一场幻觉当升眼泪的存在是一场幻觉当升眼泪的存在是一场幻觉当升眼泪的存在是一场幻觉当升"
                android:textColor="#f00"
                android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
