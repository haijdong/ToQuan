<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F8F8F8"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#323441">

        <ImageButton
            android:id="@+id/privatevd_returnbtn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_title_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/privatevd_returnbtn"
            android:gravity="center_vertical"
            android:text="私房视频"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:text="发送"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:background="#F8F8F8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <EditText
                android:hint="吸引眼球的描述才会火哦..."
                android:textSize="15sp"
                android:background="#F8F8F8"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:background="#E7E7E7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/selector_privated_privatevideobtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:src="@drawable/ic_privatevd_playbtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="私房视频"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/selector_fragment_my_pressed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/private_positionimg"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_privatevd_position"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:layout_toRightOf="@id/private_positionimg"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="长沙市"
                android:id="@+id/textView"/>

            <ImageView
                android:src="@drawable/ic_tick"
                android:layout_width="50dp"
                android:padding="16dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8F8"></View>

        <RelativeLayout
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/private_shareimg"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_private_share"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/private_shareimg"
                android:text="同步到微信朋友圈"
                />

            <ImageView
                android:src="@drawable/ic_tick"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#B2B2B2"
            android:gravity="center_horizontal"
            android:text="分享之后在朋友圈也可以直接支付查看"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>

    
</LinearLayout>