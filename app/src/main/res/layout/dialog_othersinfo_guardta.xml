<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:padding="15dp"
              android:layout_width="320dp"
              android:layout_height="220dp">
    <TextView
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:text="守护TA"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RadioButton
            android:paddingTop="5dp"
            android:drawableTop="@drawable/ic_rose"
            android:text="99"
            android:background="@drawable/selector_othersinfo_guardtabtn"
            android:textColor="@drawable/selector_othersinfo_guardtatxt"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:paddingTop="5dp"
            android:drawableTop="@drawable/ic_rose"
            android:text="199"
            android:background="@drawable/selector_othersinfo_guardtabtn"
            android:textColor="@drawable/selector_othersinfo_guardtatxt"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:paddingTop="5dp"
            android:drawableTop="@drawable/ic_rose"
            android:text="399"
            android:background="@drawable/selector_othersinfo_guardtabtn"
            android:textColor="@drawable/selector_othersinfo_guardtatxt"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:paddingTop="5dp"
            android:drawableTop="@drawable/ic_rose"
            android:text="599"
            android:background="@drawable/selector_othersinfo_guardtabtn"
            android:textColor="@drawable/selector_othersinfo_guardtatxt"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:paddingTop="5dp"
            android:drawableTop="@drawable/ic_rose"
            android:text="999"
            android:background="@drawable/selector_othersinfo_guardtabtn"
            android:textColor="@drawable/selector_othersinfo_guardtatxt"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:paddingTop="5dp"
            android:drawableTop="@drawable/ic_rose"
            android:text="1999"
            android:background="@drawable/selector_othersinfo_guardtabtn"
            android:textColor="@drawable/selector_othersinfo_guardtatxt"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </RadioGroup>

    <TextView
        android:textSize="14sp"
        android:gravity="center"
        android:text="1颗钻石=10朵鲜花"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:textColor="#E91F64"
        android:textSize="14sp"
        android:gravity="center"
        android:text="赠送鲜花即可成为守护天使与TA无限畅聊"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_width="150dp"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btn_othersinfo_dialogcancle"
            android:text="取消"
            android:textColor="#E91F64"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_othersinfo_dialogsubmit"
            android:text="确定"
            android:textColor="#E91F64"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>